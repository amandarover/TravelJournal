<body>
  <div class="container">
    <form class="needs-validation" id="edit_event" action="<%= travel_day_event_path(@travel_id, @day.id, @event.id) %>" accept-charset="UTF-8" method="post" novalidate>
      <input type="hidden" name="_method" value="PUT">
      <h1>Editar Evento:</h1>

      <h2><strong><%= @day.date.strftime('%A') %>, <%= @day.date.strftime('%d') %> de <%= @day.date.strftime('%B') %></strong></h2>
      <div class="form-group">
        <label>Nome</label>
        <input class="form-control" id="event_title" type="text" value="<%= @event.name %>" name="event[name]" placeholder="Check-in" required>
        <div class="valid-feedback">
      </div>
      <div class="form-group">
        <label>Categoria</label>
        <input class="form-control" id="category" type="text" value="<%= @event.category %>" name="event[category]" placeholder="Estadia" required>
        <div class="valid-feedback">
      </div>
      <div class="form-group">
        <label>Endereço</label>
        <input id="event_address" type="text" value="<%= @event.address %>" name="event[address]" placeholder="Rua Maria da silva">
      </div>
      <div class="form-group">
        <label>Horário de ínicio</label>
        <input class="form-control" id="event_starting_time" type="time" value="<%= @event.starting_time %>" name="event[starting_time]" required>
        <div class="valid-feedback">
      </div>
      <div class="form-group">
        <label>Horário de término</label>
        <input class="form-control" id="event_ending_time" type="time" value="<%= @event.ending_time %>" name="event[ending_time]" required>
        <div class="valid-feedback">
      </div>
      <div class="form-group">
        <label>Preço</label>
        <input id="event_pricing" type="text" value="<%= @event.pricing %>" name="event[pricing]" placeholder="1.000">
      <%#  TODO: Add price choice, dolar or reais %>
      </div>
      <div class="form-group">
        <label>Descrição</label>
        <input id="event_description" type="text" value="<%= @event.description %>" name="event[description]" placeholder="Hotel em NY">
      </div>
      <input type="submit" value="Editar" class="button-primary">
    </form>
  </div>
</body>
