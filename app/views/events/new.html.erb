<body>
  <div class="container">

    <form class="needs-validation" id="new_event" action="<%= travel_day_events_path(@travel.id, @day.id) %>" accept-charset="UTF-8" method="post" novalidate>
      <h1>Criar novo Evento:</h1>
      <%= render 'events/error_messages' %>

      <h3>Dia <%= @day.date.strftime('%d/%m/%Y') %></h3>
      <div class="form-group">
        <label>Nome</label>
        <input class="form-control" id="event_title" type="text" name="event[name]" placeholder="Check-in" required>
        <div class="valid-feedback">
      </div>
      <div class="form-group">
        <label>Categoria</label>
        <input class="form-control" id="category" type="text" name="event[category]" placeholder="Estadia" required>
        <div class="valid-feedback">
      </div>
      <div class="form-group">
        <label>Endereço</label>
        <input id="event_address" type="text" name="event[address]" placeholder="Rua Maria da silva">
      </div>
      <div class="form-group">
        <label>Horário de ínicio</label>
        <input class="form-control" id="event_starting_time" type="time" name="event[starting_time]" required>
        <div class="valid-feedback">
      </div>
      <div class="form-group">
        <label>Horário de término</label>
        <input class="form-control" id="event_ending_time" type="time" name="event[ending_time]" required>
        <div class="valid-feedback">
      </div>
      <div class="form-group">
        <label>Preço</label>
        <div class="input-group mb-2 mr-sm-2">
          <div class="input-group-text">R$</div>
        </div>
        <input id="event_pricing" type="text" name="event[pricing]" placeholder="1.000">
      </div>
      <div class="form-group">
        <label>Descrição</label>
        <input id="event_description" type="text" name="event[description]" placeholder="Hotel em NY">
      </div>
      <input type="submit" value="Criar" class="button-primary">
    </form>
  </div>
</body>
