<div class="container">
  <h1>Listing travels</h1>

  <table>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th></th>
    </tr>

    <% @travels.each do |travel| %>
      <tr>
        <td><%= travel.name %></td>
        <td><%= travel.destination %></td>
        <td><%= travel.init_date.strftime('%d/%m/%Y') %></td>
        <td><%= travel.final_date.strftime('%d/%m/%Y') %></td>
        <td><%= travel.description %></td>
        <td><%= link_to 'Ver',
                travel_path(travel),
                  class: "input-button" %></td>
        <td><%= link_to 'Editar',
                edit_travel_path(travel),
                  class: "input-button" %></td>
        <td><%= link_to 'Deletar',
                 travel_path(travel),
                   method: :delete,
                   data: { confirm: 'VocÃª tem certeza?' },
                   class: "input-button" %></td>
      </tr>
    <% end %>
  </table>
</div>