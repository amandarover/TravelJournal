<body>
  <div class="container">
    <form id="new_travel" class="form_with_steps" action="/travels" accept-charset="UTF-8" method="post">
      <h1>Criar nova Viagem:</h1>

      <% if @travel.errors.any? %>
        <div id="error_explanation">
          <h2>
            Ops! Tivemos <%= pluralize(@travel.errors.count, "erro") %>.
          </h2>
          <ul>
            <% @travel.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <p><label>Nome da viagem</label></p>
        <input id="travel_title" type="text" name="travel[name]" placeholder="Viagem de formatura!" oninput="this.className = ''">
      <p><label>Para onde você vai?</label></p>
        <input id="travel_destination" type="text" name="travel[destination]" placeholder="Orlando" oninput="this.className = ''">

      <p><label>Data de ínicio</label></p>
        <input id="travel_init_date" type="date" name="travel[init_date]" oninput="this.className = ''">
      <p><label>Data final</label></p>
        <input id="travel_final_date" type="date" name="travel[final_date]" oninput="this.className = ''">

      <p><label>Descrição</label></p>
        <input id="travel_description" type="text" name="travel[description]" placeholder="Passando por Orlando e Nova York" oninput="this.className = ''">

      <input type="submit" value="Criar">
    </form>
  </div>
</body>
